#!/bin/bash

checkout() {
    [ ! -d "$1/src" ] && git clone https://github.com/yuriy-chumak/$1 --depth 1 $1
}

checkout gl2es
cd gl2es; make; cd ..

checkout GLU

checkout SOIL

checkout vrApi

